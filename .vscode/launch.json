{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Go API Locally",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/backend/cmd/api/main.go",
        "env": {
          "SERVER_PORT": "8080"
        },
        "args": []
      },
      {
        "name": "Docker: Attach to Go API",
        "type": "go",
        "request": "attach",
        "mode": "remote",
        "remotePath": "/app",
        "port": 40000,
        "host": "127.0.0.1",
        "showLog": true,
        "trace": "verbose"
      },
      {
        "name": "Docker: Attach to Next.js",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "address": "localhost",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app",
        "restart": true,
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Debug Client-Side",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}",
        "sourceMaps": true
      },   
    ],
    "compounds": [
      {
        "name": "Full-Stack Docker Debug",
        "configurations": ["Docker: Attach to Next.js", "Debug Client-Side"]
      }
    ]
  }